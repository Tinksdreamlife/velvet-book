
 <%- include('../partials/header.ejs') %>


<main>
 <h1>Add a New Event</h1>

        <form action="/events" method="POST">

            <!-- Date of Event -->
            <label for="dateOfEvent">Date of Event:</label>
            <input type="date" name="dateOfEvent" id="dateFfEvent" required />

            <!-- Venue Name -->
            <label for="venueName">Venue Name:</label>
            <input type="text" name="venueName" id="venueName" required />

            <!-- Income -->
            <label for="income">Income ($):</label>
            <input type="number" name="income" id="income" step="0.01" required />

            <!-- House Fee -->
            <label for="expenseHouseFee">House Fee ($):</label>
            <input type="number" name="expenseHouseFee" id="expenseHouseFee" step="0.01" required />

            <!-- Tip Out -->
            <label for="expenseTipOut">Tip Out($):</label>
            <input type="number" name="expenseTipOut" id="expenseTipOut" step="0.01" required />

            <!-- Travel -->
            <label for="expenseTravel">Travel ($):</label>
            <input type="number" name="expenseTravel" id="expenseTravel" step="0.01" required /> 

            <!-- Promo -->
            <label for="expensePromo">Promo ($):</label>
            <input type="number" name="expensePromo" id="expensePromo" step="0.01" required /> 

            <!-- Other Expenses -->
            <label for="expenseOtherAmount">Other Expense ($):</label>
            <input type="number" name="expenseOther.amount" id="expenseOtherAmount" step="0.01" required />

            <!-- Optional Note -->
            <label for="expenseOtherNote">Other Expense Note:</label>
            <input type="text" name="expenseOther.note" id="expenseOtherNote" />


            <button type="submit">ADD EVENT</button>
        </form>
</main>

<%- include('../partials/footer.ejs') %>